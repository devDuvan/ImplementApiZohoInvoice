@import "normalize.styl"

negro_A		=	#192024
azul_claro	=	#2e9dff
gris_claro	=	#DEE0DF
gris_oscuro	=	#8C7F8C
transparent_black = rgba(0,0,0,0.5)

body
	background-color negro_A
	font-family Verdana, Arial, Helvetica, sans-serif
	font-size 16px
	min-width 580px
p
	color #fff
	margin-top 10px
	margin-bottom 10px
	font-size 14px
	line-height 25px
	font-weight 300
	max-width 450px
	text-align justify
	margin 0 auto
.header
	background-color transparent_black
.page
	width 100%
	height 100%
	text-align center
.title-heading
	color #fff
	font-size 30px
	font-weight 300
	text-align center
	letter-spacing 5px
	text-transform uppercase
	margin-top 0
	cursor pointer
	a
		color #fff
		text-decoration none
		&:hover
			color gris_oscuro
.relative
	position relative
.avatar
	cursor pointer
	width 240px
	height 240px
	border-radius 120px
	margin 0 auto
	&-description
		background transparent_black
		color #fff
		position absolute
		top -500px
		bottom 0
		left 0
		right 0
		transition .5s
		h3
			margin-bottom 60px
	&:hover
		section
			top 55px		
.details
	color orange
	font-weight normal
	font-size 14px
	span
		display block
.button-dark
	display inline-block
	margin 10px
	cursor pointer
	padding 10px 30px
	border 1px solid #fff
	border-radius 4px
	transition background-color 300ms ease, border 300ms ease, color 300ms ease
	color #fff
	line-height 21px
	font-weight 300
	letter-spacing 2px
	text-decoration none
	text-transform uppercase
	font-size 11px
	&:hover
		border-color azul_claro
		color azul_claro
.table
	color #fff
	margin 0 auto
	border-radius 20px
	background-color transparent_black
	th
	td
		padding 10px
	a
	&-link
		color #fff
		font-weight normal
		cursor pointer
		text-decoration none
	&-link:hover
		color azul_claro
	&-title
		font-size 1.5em
		text-align left

.information
	background-color #fff
	width 600px
	border-radius 20px
	margin 0 auto
	&-title
		color gris_oscuro
		font-weight normal
		font-size 1em
		margin-left 10px
		text-align left
.row
	display block
	margin-bottom 10px
	margin-left 10px
	text-align left
.col
	display inline-block
	width 25%
.pagination
	width 100%
	padding-left 0
	margin 20px 0
	border-radius 4px
	li
		display inline
		a
			padding 6px 12px
			text-decoration none
			margin-left 0
			border-top-left-radius 4px
			border-bottom-left-radius 4px
			color #fff
			border 1px solid transparent
			transition .3s
			&:visited
				color #fff
			&:hover
				border 1px solid azul_claro
				color azul_claro
	.is-active
		a
			background-color azul_claro
			color #fff
.hidden
	display none
@media screen and (max-width:720px)
	.button-dark
		display block
	.hidden
		display none